<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/thirdRowLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/secondRowLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="parent">

        <Button
            android:id="@+id/fourButton"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginStart="@dimen/margin_x"
            android:layout_marginEnd="@dimen/margin_x"
            android:layout_weight="1"
            android:backgroundTint="@color/bg_dark_grey"
            android:fontFamily="@font/fa_solid_900"
            android:paddingStart="@dimen/padding_x"
            android:paddingEnd="@dimen/padding_x"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/fiveButton"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginStart="@dimen/margin_x"
            android:layout_marginEnd="@dimen/margin_x"
            android:layout_weight="1"
            android:backgroundTint="@color/bg_dark_grey"
            android:fontFamily="@font/fa_solid_900"
            android:paddingStart="@dimen/padding_x"
            android:paddingEnd="@dimen/padding_x"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/sixButton"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginStart="@dimen/margin_x"
            android:layout_marginEnd="@dimen/margin_x"
            android:layout_weight="1"
            android:backgroundTint="@color/bg_dark_grey"
            android:fontFamily="@font/fa_solid_900"
            android:paddingStart="@dimen/padding_x"
            android:paddingEnd="@dimen/padding_x"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/minusButton"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginStart="@dimen/margin_x"
            android:layout_marginEnd="@dimen/margin_x"
            android:layout_weight="1"
            android:backgroundTint="@color/bg_orange"
            android:fontFamily="@font/fa_solid_900"
            android:paddingStart="@dimen/padding_x"
            android:paddingEnd="@dimen/padding_x"
            android:text="@string/minus_icon"
            android:textColor="@color/white"
            android:textSize="@dimen/button_text_size" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondRowLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/firstRowLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thirdRowLayout">

        <Button
            android:id="@+id/oneButton"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginStart="@dimen/margin_x"
            android:layout_marginEnd="@dimen/margin_x"
            android:layout_weight="1"
            android:backgroundTint="@color/bg_dark_grey"
            android:fontFamily="@font/fa_solid_900"
            android:paddingStart="@dimen/padding_x"
            android:paddingEnd="@dimen/padding_x"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/twoButton"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginStart="@dimen/margin_x"
            android:layout_marginEnd="@dimen/margin_x"
            android:layout_weight="1"
            android:backgroundTint="@color/bg_dark_grey"
            android:fontFamily="@font/fa_solid_900"
            android:paddingStart="@dimen/padding_x"
            android:paddingEnd="@dimen/padding_x"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/threeButton"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginStart="@dimen/margin_x"
            android:layout_marginEnd="@dimen/margin_x"
            android:layout_weight="1"
            android:backgroundTint="@color/bg_dark_grey"
            android:fontFamily="@font/fa_solid_900"
            android:paddingStart="@dimen/padding_x"
            android:paddingEnd="@dimen/padding_x"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/plusButton"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginStart="@dimen/margin_x"
            android:layout_marginEnd="@dimen/margin_x"
            android:layout_weight="1"
            android:backgroundTint="@color/bg_orange"
            android:fontFamily="@font/fa_solid_900"
            android:paddingStart="@dimen/padding_x"
            android:paddingEnd="@dimen/padding_x"
            android:text="@string/plus_icon"
            android:textColor="@color/white"
            android:textSize="@dimen/button_text_size" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/firstRowLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondRowLayout">

        <Button
            android:id="@+id/plusMinusButton"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginStart="@dimen/margin_x"
            android:layout_marginEnd="@dimen/margin_x"
            android:layout_weight="1"
            android:backgroundTint="@color/bg_light_grey"
            android:fontFamily="@font/fa_solid_900"
            android:paddingStart="@dimen/padding_x"
            android:paddingEnd="@dimen/padding_x"
            android:text="@string/plus_minus_icon"
            android:textColor="@color/black"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/zeroButton"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginStart="@dimen/margin_x"
            android:layout_marginEnd="@dimen/margin_x"
            android:layout_weight="1"
            android:backgroundTint="@color/bg_dark_grey"
            android:fontFamily="@font/fa_solid_900"
            android:paddingStart="@dimen/padding_x"
            android:paddingEnd="@dimen/padding_x"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/decimalButton"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginStart="@dimen/margin_x"
            android:layout_marginEnd="@dimen/margin_x"
            android:layout_weight="1"
            android:backgroundTint="@color/bg_dark_grey"
            android:fontFamily="@font/fa_solid_900"
            android:paddingStart="@dimen/padding_x"
            android:paddingEnd="@dimen/padding_x"
            android:text="."
            android:textColor="@color/white"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/equalsButton"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginStart="@dimen/margin_x"
            android:layout_marginEnd="@dimen/margin_x"
            android:layout_weight="1"
            android:backgroundTint="@color/bg_orange"
            android:fontFamily="@font/fa_solid_900"
            android:paddingStart="@dimen/padding_x"
            android:paddingEnd="@dimen/padding_x"
            android:text="@string/equals_icon"
            android:textColor="@color/white"
            android:textSize="@dimen/button_text_size" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>