<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="calculator_button" parent="Widget.Material3.Button">
        <item name="android:layout_width">@dimen/button_size</item>
        <item name="android:layout_height">@dimen/button_size</item>
        <item name="android:layout_marginStart">@dimen/margin_x</item>
        <item name="android:layout_marginEnd">@dimen/margin_x</item>
        <item name="android:fontFamily">@font/fa_solid_900</item>
        <item name="android:paddingStart">@dimen/padding_x</item>
        <item name="android:paddingEnd">@dimen/padding_x</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="light_grey_button" parent="@style/calculator_button">
        <item name="android:backgroundTint">@color/bg_light_grey</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="dark_grey_button" parent="@style/calculator_button">
        <item name="android:backgroundTint">@color/bg_dark_grey</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="operator_button" parent="@style/calculator_button">
        <item name="android:backgroundTint">@color/bg_orange</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="calculator_button_land" parent="Widget.Material3.Button">
        <item name="android:layout_width">@dimen/button_size</item>
        <item name="android:layout_height">@dimen/button_size</item>
        <item name="android:layout_marginStart">@dimen/margin_x_land</item>
        <item name="android:layout_marginEnd">@dimen/margin_x_land</item>
        <item name="android:fontFamily">@font/fa_solid_900</item>
        <item name="android:paddingStart">@dimen/padding_x</item>
        <item name="android:paddingEnd">@dimen/padding_x</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="light_grey_button_land" parent="@style/calculator_button_land">
        <item name="android:backgroundTint">@color/bg_light_grey</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="dark_grey_button_land" parent="@style/calculator_button_land">
        <item name="android:backgroundTint">@color/bg_dark_grey</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="operator_button_land" parent="@style/calculator_button_land">
        <item name="android:backgroundTint">@color/bg_orange</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>